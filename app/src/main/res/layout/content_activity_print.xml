<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/print_view"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding_all">

    <Button
        android:id="@+id/this_year"
        android:layout_width="@dimen/rotate_input_text_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:drawable/btn_default"
        android:text="@string/print_2018_calendar"
        android:textSize="@dimen/dashboard_text_size" />

    <Button
        android:id="@+id/next_year"
        android:layout_width="@dimen/rotate_input_text_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:drawable/btn_default"
        android:text="@string/print_2019_calendar"
        android:textSize="@dimen/dashboard_text_size" />

</LinearLayout>