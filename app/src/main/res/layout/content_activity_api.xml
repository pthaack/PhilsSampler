<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/api_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/map_image"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:drawable/editbox_background_normal"
        android:src="@drawable/ic_menu_map"
        />

    <!--
        Google Map SDK for Android is not appropriate for this particular application
        / -->
    <!-- fragment
        android:visibility="gone"
        android:id="@+id/map_element"
        android:layout_width="@dimen/card_width"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/card_height"
        android:name="com.google.android.gms.maps.MapFragment"
        / -->

    <EditText
        android:id="@+id/gps_location"
        android:layout_width="@dimen/rotate_input_text_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:drawable/editbox_background"
        android:inputType="textShortMessage"
        android:text="@string/blank_space"
        android:textSize="@dimen/minicard_text_size" />

    <EditText
        android:id="@+id/gps_detail"
        android:layout_width="@dimen/rotate_input_text_width"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:drawable/editbox_background"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/blank_space"
        android:textSize="@dimen/minicard_text_size" />

</LinearLayout>